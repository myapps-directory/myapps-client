INSTALLER_NAME="@OLA_INSTALLER_NAME@"
PROJECT_ROOT="@PROJECT_ROOT_DIR@"

createBuild()
{
    local APPID=$1
    local BUILDID=$2
    local MEDIAID=$3

    cp ola_updater.exe tmp/build
    cp updater_dlls/* tmp/build
    cp "$INSTALLER_PATH/$INSTALLER_NAME" tmp/build
	cp "$PROJECT_ROOT/ola/client/updater/updater.png" tmp
	
    #cp "$PROJECT_ROOT/ola/client/store/images/ola_store_bag.png" tmp
    INSTALLER_SUM=`sha256sum $INSTALLER_PATH/$INSTALLER_NAME | cut -d' ' -f 1`
    #sed "s/MEDIAID/$MEDIAID/g" ola_store.build.yml > tmp/ola_store.build.yml
    
    echo "Installer sha256sum: $INSTALLER_SUM"
    
    #sed "s/OLA_INSTALLER_NAME/$INSTALLER_NAME/g" updater.build.yml > tmp/updater.build.1.yml
    #sed "s/OLA_INSTALLER_SUM/$INSTALLER_SUM/g" tmp/updater.build.1.yml > tmp/updater.build.yml

    sed "s/OLA_INSTALLER_NAME/$INSTALLER_NAME/g" updater.build.yml | sed "s/OLA_INSTALLER_SUM/$INSTALLER_SUM/g" > tmp/updater.build.yml

    #sed "s/OLA_INSTALLER/$INSTALLER_NAME/g" updater.build.yml > tmp/updater.build1.yml
    #sed "s/OLA_INSTALLER_SUM/$INSTALLER_SUM/g" tmp/updater.build1.yml > tmp/updater.build.yml

    #echo -ne "create build $APPID $BUILDID tmp/updater.build.yml tmp/build tmp/updater.png\nq\n" | ola_client_cli
}

createMedia()
{
    local APPID=$1
    local MEDIAID=$2

    echo "create media $PROJECT_ROOT"
   
    for filename in $PROJECT_ROOT/media/*.png; do
        magick convert "$filename" "tmp/media/$(basename "$filename" .png).jpg"
    done

    for filename in $PROJECT_ROOT/media/*.png; do
        magick convert -resize 384x216 "$filename" "tmp/media/$(basename "$filename" .png)t.jpg"
    done

    echo -ne "create media $APPID $MEDIAID tmp/media\nq\n" | ola_client_cli
}

rm -rf tmp
mkdir tmp
mkdir tmp/build
mkdir tmp/media

